// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  auth0Id      String   @unique @default("")
  name         String?
  watchedMovies     Movie[]  @relation(name: "watchedMovies")
  watchList    Movie[]  @relation(name: "watchList")
  userReviews     Review[]
}

model Movie {
  id          Int       @id @default(autoincrement())
  title       String    @db.VarChar(255)
  year        String?
  imdbID      String
  poster      String?
  cast        String?   @db.Text
  plot        String?   @db.Text
  director    String?
  imdbRating     String? 
  rating      Float       
  watchedBy   User[]    @relation(name: "watchedMovies")
  WatchListBy   User[]  @relation(name: "watchList")
  reviews     Review[]
}

model Review {
  id          Int       @id @default(autoincrement())
  rating      Float
  comment     String?
  user        User   @relation(fields: [userId], references: [id])
  userId      Int    
  movie       Movie  @relation(fields: [movieId], references: [id])
  movieId     Int
}